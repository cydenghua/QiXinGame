<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_budinghefen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.bet.BetChoseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="不定位合分"/>
        <CheckBox
            android:id="@+id/cb_liangshuhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="两数合"/>
        <CheckBox
            android:id="@+id/cb_sanshuhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三数合"/>
        <EditText
            android:id="@+id/et_heshu"
            android:layout_width="110dp"
            style="@style/editNumberStyle"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_zhifanwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="值范围"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 从"/>
        <EditText
            android:id="@+id/et_heshu_min"
            android:layout_width="60dp"
            style="@style/editNumberStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="值  至"/>
        <EditText
            android:id="@+id/et_heshu_max"
            android:layout_width="60dp"
            style="@style/editNumberStyle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="值"/>
    </LinearLayout>

</LinearLayout>