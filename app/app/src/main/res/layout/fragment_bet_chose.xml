<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.bet.BetChoseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_2p"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="二定"/>
                <Button
                    android:id="@+id/btn_3p"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="三定"/>
                <Button
                    android:id="@+id/btn_4p"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="四定"/>

                <Button
                    android:id="@+id/btn_2px"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="二现"/>
                <Button
                    android:id="@+id/btn_3px"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="三现"/>
                <Button
                    android:id="@+id/btn_4px"
                    style="@style/btnBlueChose"
                    android:background="@drawable/selector_btn_chose"
                    android:layout_weight="1"
                    android:text="四现"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView style="@style/lineDivideBlue"/>

            <include layout="@layout/fragment_bet_chose_dingpei"></include>

            <TextView style="@style/lineDivideBlue"/>

            <include layout="@layout/fragment_bet_chose_hefen"></include>

            <TextView style="@style/lineDivideBlue"/>

            <include layout="@layout/fragment_bet_chose_budinghefen"></include>

            <TextView style="@style/lineDivideBlue"/>

            <include layout="@layout/fragment_bet_chose_quanzhuan"></include>

            <TextView style="@style/lineDivideBlue"/>

            <include layout="@layout/fragment_bet_chose_chuqu"></include>

            <TextView style="@style/lineDivideBlue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_clear"
                    style="@style/btnBlueChose"
                    android:background="@drawable/shape_grey_r"
                    android:layout_weight="1"
                    android:text="复位"/>
                <Button
                    android:id="@+id/btn_create"
                    style="@style/btnBlueChose"
                    android:background="@drawable/shape_blue_r"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:text="生成"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>