<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.UserOddsActivity">

    <include layout="@layout/bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_weight="1"
            android:text="类别"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_min"
            android:layout_weight="1"
            android:text="最小下注"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_max_odds"
            android:layout_weight="1"
            android:text="赔率上限"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_max"
            android:layout_weight="1"
            android:text="单注上限"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_class_max"
            android:layout_weight="1"
            android:text="单项上限"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_rake"
            android:layout_weight="1"
            android:text="交易回水"
            android:gravity="center"
            style="@style/textBlackNormal"/>
        <TextView
            android:id="@+id/tv_curr_odds"
            android:layout_weight="1"
            android:text="赔率"
            android:gravity="center"
            style="@style/textBlackNormal"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>