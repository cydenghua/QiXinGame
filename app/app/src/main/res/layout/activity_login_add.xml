<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.login.LoginAddActivity">

    <include layout="@layout/bar_title" />

    <LinearLayout
        style="@style/itemInfo"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            style="@style/itemInfoLeftText"
            android:text="名         称："/>
        <EditText
            android:id="@+id/et_name"
            style="@style/itemInfoRightEditText"
            android:hint="请输入登录名字"/>
    </LinearLayout>

    <LinearLayout
        style="@style/itemInfo"
        android:orientation="horizontal">
        <TextView
            style="@style/itemInfoLeftText"
            android:text="服务地址："/>
        <EditText
            android:id="@+id/et_url"
            style="@style/itemInfoRightEditText"
            android:hint="请输入服务地址"/>
    </LinearLayout>

    <LinearLayout
        style="@style/itemInfo"
        android:orientation="horizontal">
        <TextView
            style="@style/itemInfoLeftText"
            android:text="账         号："/>
        <EditText
            android:id="@+id/et_username"
            style="@style/itemInfoRightEditText"
            android:hint="请输入服务账号"/>
    </LinearLayout>

    <LinearLayout
        style="@style/itemInfo"
        android:orientation="horizontal">
        <TextView
            style="@style/itemInfoLeftText"
            android:text="密         码："/>
        <EditText
            android:id="@+id/et_password"
            style="@style/itemInfoRightEditText"
            android:inputType="textPassword"
            android:hint="请输入服务密码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_normal">
        <Button
            android:id="@+id/btn_del"
            style="@style/btnGrey"
            android:layout_weight="1"
            android:text="删除"/>
        <Button
            android:id="@+id/btn_clear"
            style="@style/btnGrey"
            android:layout_weight="1"
            android:text="清空"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        style="@style/btnBlue"
        android:layout_marginTop="@dimen/space_sides"
        android:text="保存"/>

</LinearLayout>