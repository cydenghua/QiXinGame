<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_grey"
    tools:context=".activity.user.MyUserActivity">

    <include layout="@layout/bar_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:padding="@dimen/space_normal"
        style="@style/textWhiteSmall"
        android:text="点击右上角增加会员，长按会员进行编辑"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_normal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_my_name"
            style="@style/textBlackSmall"/>
        <TextView
            android:id="@+id/tv_my_credit"
            style="@style/textBlackSmall"/>
        <TextView
            android:id="@+id/tv_my_credit_left"
            style="@style/textBlackSmall"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/space_normal"
        android:divider="@color/white_grey">
    </ListView>

</LinearLayout>